@model IEnumerable<CBTSWE2_TP02.Models.Container>

@{
    ViewData["Title"] = "Container";
}
@* Desenvolvido por Laysa Bernardes e Lucas Lopes *@

<div class="container my-5">
    <div class="card shadow-sm p-4">
        <h2 class="text-center text-success mb-5">Container</h2>

        <div class="d-flex justify-content-end mb-3">
            <a asp-controller="Container" asp-action="Create" class="btn btn-success fw-bold">
                Adicionar Container
            </a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-success text-white">
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">Número</th>
                            <th class="text-center">Tipo</th>
                            <th class="text-center">Tamanho</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Id</td>
                                <td class="text-center">@item.Numero</td>
                                <td class="text-center">@item.Tipo</td>
                                <td class="text-center">@item.Tamanho</td>
                                <td class="action-buttons">
                                    <a asp-controller="Container" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Atualizar</a>
                                    <a asp-controller="Container" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                <h4 class="alert-heading">Nenhum registro encontrado!</h4>
                <p>Não há Containers cadastrados no sistema.</p>
            </div>
        }
    </div>
</div>