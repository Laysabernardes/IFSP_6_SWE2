<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEB_SITE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="main-header py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="logo text-white text-decoration-none" asp-controller="Home" asp-action="Index">Sistema de Produtos</a>
            <nav class="nav-links">
                <a asp-controller="Home" asp-action="Index" class="text-white me-3">Início</a>
                <a asp-controller="Home" asp-action="Creditos" class="text-white">Créditos</a>
            </nav>
        </div>
    </header>

    <main role="main" class="flex-fill">
        @RenderBody()
    </main>

    <footer class="main-footer">
        <p>&copy; 2025 - Sistema de Gerenciamento de Produtos</p>
        <p>Desenvolvido por Laysa Bernardes e Lucas Lopes</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
