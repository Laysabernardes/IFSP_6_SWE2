@model IEnumerable<Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">Gerenciamento de Produtos</h2>
            <p class="text-muted mb-0">Acompanhe, edite e cadastre novos produtos do sistema.</p>
        </div>

        <a asp-action="Criar" class="btn btn-success shadow-sm px-4 py-2">
            Cadastrar Produto
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-dark text-white text-center">
                        <tr>
                            <th style="width: 8%;">@Html.DisplayNameFor(model => model.Id)</th>
                            <th style="width: 30%;">@Html.DisplayNameFor(model => model.Nome)</th>
                            <th style="width: 15%;">@Html.DisplayNameFor(model => model.Preco)</th>
                            <th style="width: 10%;">@Html.DisplayNameFor(model => model.Status)</th>
                            <th style="width: 15%;">@Html.DisplayNameFor(model => model.IdUsuarioCadastro)</th>
                            <th style="width: 15%;">@Html.DisplayNameFor(model => model.IdUsuarioUpdate)</th>
                            <th style="width: 12%;">Ações</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
                                <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td class="text-center">R$ @Html.DisplayFor(modelItem => item.Preco)</td>
                                <td class="text-center">
                                    @if (item.Status)
                                    {
                                        <span class="badge bg-success rounded-pill px-3 py-2">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger rounded-pill px-3 py-2">Inativo</span>
                                    }
                                </td>

                                <td class="text-center">@Html.DisplayFor(modelItem => item.IdUsuarioCadastro)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.IdUsuarioUpdate)</td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">

                                        <a asp-action="Editar" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-primary px-3">
                                            Editar
                                        </a>

                                        <form asp-controller="Produtos" asp-action="Excluir" 
                                              asp-route-id="@item.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger px-3">
                                                Excluir
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4 shadow-sm" role="alert">
            Nenhum produto cadastrado no momento.
        </div>
    }
</div>