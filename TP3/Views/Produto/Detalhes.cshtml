@model Produto
@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="details-container">
    <div class="product-details card shadow-sm border-0">
        <table class="details-table">
            <thead>
                <tr>
                    <th colspan="2">@Model.Nome</th>
                </tr>
            </thead>
            <tbody>
                <tr><td><strong>ID:</strong></td><td>@Model.Id</td></tr>
                <tr><td><strong>Descrição:</strong></td><td>@Model.Descricao</td></tr>
                <tr><td><strong>Preço:</strong></td><td>@Model.Preco.ToString("C")</td></tr>
                <tr><td><strong>Quantidade em estoque:</strong></td><td>@Model.QtdEstoque</td></tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-end gap-2 p-3">
            <a asp-controller="Produto" asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <form asp-controller="Produto" asp-action="Excluir" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Deseja excluir este produto?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Excluir</button>
            </form>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>
